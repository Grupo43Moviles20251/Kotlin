<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (FORZADO A CLARO) -->
    <style name="Theme.FreshLink" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">#38677A</item>
        <item name="colorPrimaryVariant">#2A9D8F</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">#38677A</item>

        <!-- Forzar fondo claro -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.FreshLink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>